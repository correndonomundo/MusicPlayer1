<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.MusicPlayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".byAlbumActivity" />
        <activity android:name=".byArtistActivity" />
        <activity android:name=".byTitleActivity" />
        <activity android:name=".playerActivity" />
        <activity android:name=".playerlistActivity" />
        <activity android:name="com.example.android.musicplayer.playerAdapter"></activity>
    </application>

</manifest>